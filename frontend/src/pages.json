        "navigationBarTitleText": "答案之书",
        "navigationStyle": "custom",
        "app-plus": {
          "bounce": "none",
          "titleNView": false
        }
      }
    },
    {
      "path": "pages/answer/index",
      "style": {
        "navigationBarTitleText": "答案",
        "navigationStyle": "custom",
        "app-plus": {
          "bounce": "none",
          "titleNView": false
        }
      }
    },
    {
      "path": "pages/daily/index",
      "style": {
        "navigationBarTitleText": "每日一言",
        "navigationStyle": "custom",
        "app-plus": {
          "bounce": "none",
          "titleNView": false
        }
      }
    }
